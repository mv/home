#!/usr/bin/ruby

# Ref:
#    https://github.com/statico/dotfiles/blob/master/bin/ansimodes

cols  = [ (0..3).to_a, 5, 7, 40, '40;1' ].flatten
rows  = [ (30..37).to_a, (40..47).to_a ].flatten
msg   = 'mode'
pad   = 3
reset = "\e[0m"

print "\e[H\e[2J"
puts "ANSI Modes -- \\e[<col>;<row>m\n"
puts "\\e is ^[, \\033 in octal, \\x1b in hex"
puts

for col in cols
    print %q{ } * pad, "\e[#{col}m"
    print "#{msg}#{col}".ljust(msg.length+pad)
    print reset
end
puts

for row in rows
    for col in cols
        print %q{ } * pad, "\e[#{col};#{row}m"
        print "#{msg}#{row}".ljust(msg.length+pad)
        print reset
    end
    puts
end

puts reset
