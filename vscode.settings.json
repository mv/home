{
    "[python]": { "diffEditor.ignoreTrimWhitespace": false },
    "diffEditor.hideUnchangedRegions.enabled": true,
    "diffEditor.wordWrap": "off",
    "editor.autoClosingQuotes": "never",
    "editor.cursorSmoothCaretAnimation": "explicit",
    "editor.cursorStyle": "underline",
    "editor.cursorSurroundingLines": 5,
    "editor.cursorSurroundingLinesStyle": "all",
    "editor.cursorWidth": 3,
    "editor.experimentalWhitespaceRendering": "off",
    "editor.fontFamily": "Monaco, Menlo, 'Courier New', monospace",
    "editor.fontSize": 13,
    "editor.lightbulb.enabled": "off",
    "editor.lineNumbers":"relative",
    "editor.minimap.enabled": false,
    "editor.multiCursorPaste": "full",
    "editor.renderWhitespace": "boundary",
    "editor.showFoldingControls": "always",
    "editor.smoothScrolling": true,
    "editor.stablePeek": true,
    "editor.stickyScroll.enabled": true,
    "editor.stickyTabStops": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 180,
    "editor.wrappingIndent": "indent",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.experimental.affinity": { "asvetliakov.vscode-neovim": 1 },
    "extensions.ignoreRecommendations": true,
    "files.associations": { "*.ansi": "ansi", "*.tpl": "terraform" },
    "files.autoSave": "afterDelay",
    "files.trimFinalNewlines": false,
    "files.trimTrailingWhitespace": true,
    "git.openRepositoryInParentFolders": "always",
    "makefile.configureOnOpen": true,
    "notebook.output.wordWrap": true,
    "path-autocomplete.triggerOutsideStrings": true,
    "security.workspace.trust.untrustedFiles": "open",
    "settingsSync.ignoredExtensions": [ "ms-azuretools.vscode-docker" ],
    "vim.cursorStylePerMode.insert": "block-outline",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "underline",
    "vim.cursorStylePerMode.visualblock": "line",
    "vim.easymotion": true,
    "vim.enableNeovim": true,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.scroll": 3,
    "vim.shell": "/usr/local/bin/bash",
    "vim.smartRelativeLine": true,
    "vim.statusBarColorControl": true,
    "vim.targets.smartQuotes.enable": false,
    "vim.textwidth": 120,
    "vim.normalModeKeyBindingsNonRecursive": [
      /* example */
      { "before": ["<C-n>"]        , "commands": [":nohl"] },
      /* shortcuts */
      { "before": ["<leader>", "q"], "commands": [":q!"] },
      { "before": ["<leader>", "n"], "commands": [":set number"] },
      { "before": ["<leader>", "r"], "commands": [":set invrelativenumber"] },
      /* window navigation */
      { "before": ["<leader>", "w", "j"], "after": ["<C-W>","j"] },
      { "before": ["<leader>", "w", "k"], "after": ["<C-W>","k"] },
      { "before": ["<leader>", "w", "l"], "after": ["<C-W>","l"] },
      { "before": ["<leader>", "w", "h"], "after": ["<C-W>","h"] },
      { "before": ["<leader>", "w", "h"], "after": ["<C-W>","h"] },
      /* tab navigation */
      { "before": ["<leader>",","]      , "after": ["g","t"] },
      { "before": ["<leader>","."]      , "after": ["g","T"] },
      /* sublinhado */
      { "before": ["<leader>", "s", "-"], "after": ["y","y","p","v","$","r","-"] },
      { "before": ["<leader>", "s", "="], "after": ["y","y","p","v","$","r","="] },
      { "before": ["<leader>", "s", "_"], "after": ["y","y","p","v","$","r","_"] },
      { "before": ["<leader>", "s", "*"], "after": ["y","y","p","v","$","r","*"] },
      { "before": ["<leader>", "s", "#"], "after": ["y","y","p","v","$","r","#"] },
      /* navigation in wrap mode */
      { "before": ["j"], "after": ["g","j"] } ,
      { "before": ["k"], "after": ["g","k"] } ,
      { "before": ["0"], "after": ["g","0"] } ,
      { "before": ["$"], "after": ["g","$","h"] } ,
      /* Re-hardwrap paragraphs of text */
      { "before": ["<leader>", "g", "="], "after": ["g","q","i","p"] },
    ],
    "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
    "vscode-neovim.revealCursorScrollLine": true,
    "vsicons.dontShowNewVersionMessage": true,
    "window.zoomLevel": 1,
    "workbench.colorTheme": "Default Dark+",
    "workbench.editor.enablePreview": false,
    "workbench.editorLargeFileConfirmation": 10240,
    "workbench.iconTheme": "vscode-icons",
