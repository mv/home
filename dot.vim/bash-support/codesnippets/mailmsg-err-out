
   BASE=/webco/BKP
    DIR=${BASE}/depot/
   FILE=${0##*/}
LOGFILE=${BASE}/log/${FILE%.*}.log
OUTFILE=${BASE}/log/${FILE%.*}.out

MAIL_FROM="noreply@webcointernet.com"
  MAIL_TO="infra@webcointernet.com"

mailmsg() {
    MSG=$1
    LINES=15
    LOG=`cat -n $LOGFILE | tail -${LINES}`
    OUT=`cat -n $OUTFILE | tail -${LINES}`

    mail $MAIL_TO <<-MAIL
	From: $MAIL_FROM
	To: $MAIL_TO
	Subject: ${HOSTNAME}: $MSG


	$MSG

	Command output:
	__________________________________________________________________

	$OUT
	__________________________________________________________________


	Message generated by $0 at `date`

	Last $LINES lines at log $LOGFILE:
	__________________________________________________________________

	$LOG
	__________________________________________________________________

    MAIL
}

